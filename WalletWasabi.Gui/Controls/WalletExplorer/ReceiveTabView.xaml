<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:controls="clr-namespace:WalletWasabi.Gui.Controls;assembly=WalletWasabi.Gui">

    <DockPanel Margin="10" LastChildFill="True">
        <controls:GroupBox Title="{Binding Title}" TextBlock.FontSize="30" Padding="20">
            <Grid Classes="content">
                <Grid RowDefinitions="Auto,Auto,Auto">
                    <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                        <Button Content="Generate New Receive Address" Command="{Binding GenerateCommand}" DockPanel.Dock="Right" VerticalAlignment="Top" />
                        <TextBox Text="{Binding Label, Mode=TwoWay}" Watermark="Label" UseFloatingWatermark="True" DockPanel.Dock="Left" MinWidth="300" />
                        <Grid></Grid>
                    </DockPanel>
                    <Grid ColumnDefinitions="200, Auto, 50" Margin="5 10 5 0" Grid.Row="1">
                        <TextBlock Text="Label:" />
                        <TextBlock Text="Address:" Grid.Column="1" />
                    </Grid>
                    <ListBox Grid.Row="2" Items="{Binding Addresses}" SelectedItem="{Binding SelectedAddress, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="300, *, 100">
                                    <Grid.Styles>
                                        <Style Selector="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </Grid.Styles>
                                    <TextBlock Text="{Binding Label}" />
                                    <TextBlock Text="{Binding Address}" Grid.Column="1" />
                                    <Button Content="QR Code ..." Command="{Binding QRCodeCommand}"  Grid.Column="2" Margin="0 2" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>
        </controls:GroupBox>
    </DockPanel>
</UserControl>
