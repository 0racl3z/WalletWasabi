<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:WalletWasabi.Gui.ViewModels;assembly=WalletWasabi.Gui"
>
  <UserControl.Resources>
    <converters:FilterLeftValueConverter x:Key="FilterLeftValueConverter" />
  </UserControl.Resources>

  <Grid Background="{DynamicResource ThemeAccentBrush}">
    <DockPanel LastChildFill="True" Margin="10 0">
      <StackPanel Orientation="Horizontal" Gap="4" DockPanel.Dock="Right">
        <TextBlock>Tor:</TextBlock>
        <TextBlock Text="{Binding Tor}" />
        <TextBlock>Peers:</TextBlock>
        <TextBlock Text="{Binding Peers}" />
        <TextBlock>Filters Left:</TextBlock>
        <TextBlock Text="{Binding FiltersLeft, Converter={StaticResource FilterLeftValueConverter}}" />
        <TextBlock>Blocks Left:</TextBlock>
        <TextBlock Text="{Binding BlocksLeft}" />
        <TextBlock>Mempool:</TextBlock>
        <TextBlock Text="{Binding Mempool}" />
      </StackPanel>
      <TextBlock Text="{Binding Status}" />
    </DockPanel>
  </Grid>
</UserControl>
