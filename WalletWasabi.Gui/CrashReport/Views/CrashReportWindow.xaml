<cont:MetroWindow xmlns="https://github.com/avaloniaui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:cont="clr-namespace:AvalonStudio.Shell.Controls;assembly=AvalonStudio.Shell"
                  xmlns:wasabi="clr-namespace:WalletWasabi.Gui.Controls;assembly=WalletWasabi.Gui"
                  x:Class="WalletWasabi.Gui.CrashReport.Views.CrashReportWindow"
                  Icon="avares://WalletWasabi.Gui/Assets/WasabiLogo256.png"
                  Title="{Binding Title}"
                  Width="{Binding WinWidth}" Height="{Binding WinHeight}"
                  MinWidth="{Binding WinWidth}" MinHeight="{Binding WinHeight}"
                  MaxWidth="{Binding WinWidth}" MaxHeight="{Binding WinHeight}"
                  FontFamily="{DynamicResource UiFont}" FontSize="14"
                  Foreground="{DynamicResource ThemeForegroundBrush}"
                  WindowState="{Binding WindowState}">
  <Grid ColumnDefinitions="*,*" RowDefinitions="*,Auto">
    <TextBox Grid.ColumnSpan="2" Grid.RowSpan="1" Classes="monospaceFont" AcceptsReturn="True" Text="{Binding ReportedException}" />
  </Grid>
</cont:MetroWindow>
