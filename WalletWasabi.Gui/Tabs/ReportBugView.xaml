<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:controls="clr-namespace:WalletWasabi.Gui.Controls;assembly=WalletWasabi.Gui">
  <controls:GroupBox Title="{Binding Title}" BorderThickness="0" Classes="docTabContainer">
    <Grid Classes="content" Margin="0 10 0 0">
      <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Please visit: " />
          <TextBox Text="{Binding IssuesURL}" Classes="selectableTextBlock hyperLink">
            <TextBox.ContextMenu>
              <ContextMenu>
                <MenuItem Header="Copy URL"
                          Command="{Binding CopyUrlCommand}" />
              </ContextMenu>
            </TextBox.ContextMenu>
          </TextBox>
        </StackPanel>
        <TextBlock Text="Consider using Tor Browser to protect your privacy." />
      </StackPanel>
    </Grid>
  </controls:GroupBox>
</UserControl>
