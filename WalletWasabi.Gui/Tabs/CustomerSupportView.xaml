<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:controls="clr-namespace:WalletWasabi.Gui.Controls;assembly=WalletWasabi.Gui">
    <controls:GroupBox Title="{Binding Title}" BorderThickness="0" Classes="docTabContainer">
        <Grid Classes="content" Margin="0 10 0 0">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Please visit: " />
                    <TextBox Text="http://reddit.com/r/WasabiWallet/" Classes="selectableTextBlock hyperLink" />
                </StackPanel>
                <TextBlock Text="We recommend you to use Tor browser in order to protect your privacy." />
            </StackPanel>
        </Grid>
    </controls:GroupBox>
</UserControl>
