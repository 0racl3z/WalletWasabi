{
  "name": "hidden-wallet.gui",
  "version": "0.4.0",
  "description": "HiddenWallet.GUI",
  "main": "main.js",
  "author": {
    "name": "nopara73"
  },
  "devDependencies": {
    "electron": "^1.6.5",
    "electron-builder": "^17.0.1"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "electron": "^1.6.8",
    "electron-builder": "^17.1.2"
  },
  "scripts": {
    "start": "electron .",
    "dist": "build"
  },
  "build": {
    "appId": "hidden-wallet",
    "directories": {
      "output": "../../dist"
    },
    "extraResources": {
      "from": "../HiddenWallet.API/bin/dist/",
      "to": "HiddenWallet.API/bin/dist/",
      "filter": [
        "**/*"
      ]
    },
    "mac": {
      "category": "bitcoin-wallet"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
