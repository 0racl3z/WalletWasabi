<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="using:WalletWasabi.Fluent.Controls">

  <Style Selector="c|QuestionControl">
    <Setter Property="Template">
      <ControlTemplate>
        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
          <DockPanel HorizontalAlignment="Stretch" MaxWidth="500" DockPanel.Dock="Bottom">
            <Button HorizontalAlignment="Left" Content="No" Classes="yesNo" Command="{TemplateBinding YesCommand}" />
            <Button HorizontalAlignment="Right" Content="Yes" Classes="action yesNo" IsDefault="True" Command="{TemplateBinding NoCommand}" />
          </DockPanel>
          <TextBlock Name="PART_Question"
                     Text="{TemplateBinding Text}"
                     FontSize="{TemplateBinding FontSize}"
                     TextWrapping="Wrap"
                     TextAlignment="Center"
                     HorizontalAlignment="Center"
                     DockPanel.Dock="Bottom"
                     Margin="0 10 0 50" />
          <Viewbox MaxHeight="150" DockPanel.Dock="Top">
            <Image Height="100" Source="{TemplateBinding Icon}" />
          </Viewbox>
        </DockPanel>
      </ControlTemplate>
    </Setter>
  </Style>

  <Style Selector="Button.yesNo">
    <Setter Property="Width" Value="150"/>
    <Setter Property="Height" Value="40"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="FontSize" Value="{StaticResource FontSizeH6}"/>
    <Setter Property="Padding" Value="0"/>
  </Style>

  <Style Selector="c|QuestionControl">
    <Setter Property="FontSize" Value="{StaticResource FontSizeH6}" />
  </Style>
</Styles>
