<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:WalletWasabi.Fluent.Controls">

    <Style Selector="c|TagBox">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>

                    <ItemsRepeater Items="{Binding CombinedContent}">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding .}" />
                                
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                        <ItemsRepeater.Layout>
                            <UniformGridLayout></UniformGridLayout>
                        </ItemsRepeater.Layout>
                    </ItemsRepeater>
                    <Button Command="{Binding AddTag}">Add</Button>
                    <Button Command="{Binding RemoveTag}">Sub</Button>
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="c|TagBox /template/ TextBox#PART_InputBox">
        <Setter Property="Opacity" Value="1" />
    </Style>

</Styles>