<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="using:WalletWasabi.Fluent.Controls">

  <Style Selector="c|PreviewItem">
    <Setter Property="Template">
      <ControlTemplate>
        <StackPanel Orientation="Horizontal" Spacing="30">
          <PathIcon Width="{TemplateBinding IconSize}" Height="{TemplateBinding IconSize}" Data="{TemplateBinding Icon}"
                    Foreground="{DynamicResource SystemAccentColor}" />
          <StackPanel Spacing="5">
            <TextBlock Text="{TemplateBinding Text}" Classes="storyline" />
            <ContentPresenter Name="PART_ContentPresenter" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" />
          </StackPanel>
        </StackPanel>
      </ControlTemplate>
    </Setter>
  </Style>

  <Style Selector="c|PreviewItem#PART_ContentPresenter :is(TextBlock)">
    <Setter Property="FontSize" Value="14" />
    <Setter Property="Opacity" Value="0.85" />
  </Style>

  <Style Selector="TextBlock.storyline">
    <Setter Property="Opacity" Value="0.6" />
    <Setter Property="FontSize" Value="14" />
  </Style>


</Styles>
