<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="using:WalletWasabi.Fluent.Controls">

  <Style Selector="c|LoadingControl">
    <Setter Property="Template">
      <ControlTemplate>
        <DockPanel LastChildFill="True" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="500">
          <TextBlock Text="{TemplateBinding StatusText}" Opacity="0.6" DockPanel.Dock="Bottom" Margin="0 10 0 0" />
          <ProgressBar Value="{TemplateBinding Percent}" IsIndeterminate="{Binding !$self.Value}" DockPanel.Dock="Bottom" />
          <TextBlock Text="This process may take a long time depending on the size of your wallet. Grab a coffee or watch a movie."
                     TextAlignment="Center" TextWrapping="Wrap" Opacity="0.6" DockPanel.Dock="Bottom" Margin="0 10 0 30" />
          <TextBlock Text="Wasabi is busy crunching data..." TextAlignment="Center" FontSize="22"
                     DockPanel.Dock="Bottom" Margin="0 30 0 0" />
          <Viewbox MaxHeight="200" DockPanel.Dock="Top">
            <Image Height="100" Source="/Assets/Loading/loading.png" />
          </Viewbox>
        </DockPanel>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
