<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:WalletWasabi.Fluent.Controls;assembly=WalletWasabi.Fluent">
    <Style Selector="c|TagsBox">
        <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}" />
        <Setter Property="Background" Value="{DynamicResource TextControlBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource TextControlBorderBrush}" />
        <Setter Property="BorderThickness" Value="{DynamicResource TextControlBorderThemeThickness}" />
        <Setter Property="FontSize" Value="{DynamicResource ControlContentThemeFontSize}" />
        <Setter Property="MinHeight" Value="{DynamicResource TextControlThemeMinHeight}" />
        <Setter Property="MinWidth" Value="{DynamicResource TextControlThemeMinWidth}" />
        <Setter Property="Padding" Value="{DynamicResource TextControlThemePadding}" />
        <Setter Property="Focusable" Value="True" />
        <Setter Property="Cursor" Value="IBeam" />
        <Setter Property="Template">
            <ControlTemplate>
                <DataValidationErrors>
                    <Border x:Name="PART_Border" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}" Focusable="False">
                        <ItemsPresenter Name="PART_ItemsPresenter"
                                        Items="{TemplateBinding Items}"
                                        ItemTemplate="{TemplateBinding ItemTemplate}">

                            <ItemsPresenter.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <c:ConcatenatingWrapPanel>
                                        <c:ConcatenatingWrapPanel.ConcatenatedChildren>
                                            <AutoCompleteBox x:Name="PART_AutoCompleteBox"
                                                             MinimumPrefixLength="1"
                                                             IsTextCompletionEnabled="True"
                                                             Items="{Binding #PART_Border.TemplatedParent.Suggestions}" />
                                        </c:ConcatenatingWrapPanel.ConcatenatedChildren>
                                    </c:ConcatenatingWrapPanel>
                                </ItemsPanelTemplate>
                            </ItemsPresenter.ItemsPanel>
                        </ItemsPresenter>
                    </Border>
                </DataValidationErrors>
            </ControlTemplate>
        </Setter>
        <Setter Property="(ScrollViewer.HorizontalScrollBarVisibility)" Value="Disabled" />
        <Setter Property="ItemTemplate">
            <DataTemplate>
                <Panel>
                    <Panel.Styles>
                        <Style Selector="Panel#PART_TagPanel Panel#PART_DeleteTagButton" >
                            <Setter Property="Opacity" Value="0" />
                            <Setter Property="RenderTransform" Value="scale(0.8)" />
                        </Style>
                        <Style Selector="Panel#PART_TagPanel:pointerover Panel#PART_DeleteTagButton" >
                            <Setter Property="Opacity" Value="1" />
                            <Setter Property="RenderTransform" Value="scale(1)" />
                        </Style>
                    </Panel.Styles>
                    <Panel Name="PART_TagPanel">
                        <Border Name="PART_TagItemBorder"
                                Background="Transparent"
                                BorderBrush="{DynamicResource TagsBoxControlForeground}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="4"
                                Opacity="0.4"
                                Height="{Binding #PART_DummyPanel.Bounds.Height}"
                                VerticalAlignment="Top" />
                        <Panel Name="PART_DummyPanel"
                               VerticalAlignment="Top">
                            <ContentPresenter Content="{Binding .}"
                                              VerticalAlignment="Center"
                                              Margin="10,8,10,0" />
                        </Panel>
                        <Panel
                            Name="PART_DeleteTagButton"
                            Width="13"
                            Height="13"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right">
                            <Panel.Transitions>
                                <Transitions>
                                    <DoubleTransition Property="Opacity" Duration="0:0:0.175" />
                                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:.135" Easing="QuadraticEaseIn" />
                                </Transitions>
                            </Panel.Transitions>
                            <Ellipse Fill="Red"/>
                            <Button Classes="" Command="{Binding $parent[c:TagsBox].DeleteTagCommand}" CommandParameter="{Binding }">Test</Button>
                        </Panel>
                    </Panel>
                </Panel>
            </DataTemplate>
        </Setter>
    </Style>

    <Style Selector="c|TagsBox:pointerover /template/ Border#PART_Border">
        <Setter Property="BorderBrush" Value="{DynamicResource TextControlBorderBrushPointerOver}" />
        <Setter Property="Background" Value="{DynamicResource TextControlBackgroundPointerOver}" />
    </Style>

    <Style Selector="c|TagsBox:focus-within">
        <Setter Property="Foreground" Value="{DynamicResource TextControlForegroundFocused}" />
    </Style>

    <Style Selector="c|TagsBox:focus-within /template/ Border#PART_Border">
        <Setter Property="Background" Value="{DynamicResource TextControlBackgroundFocused}" />
        <Setter Property="BorderBrush" Value="{DynamicResource TextControlBorderBrushFocused}" />
        <Setter Property="BorderThickness" Value="{DynamicResource TextControlBorderThemeThicknessFocused}" />
    </Style>

    <Style Selector="c|TagsBox:error /template/ Border#PART_Border">
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlErrorTextForegroundBrush}" />
    </Style>

    <Style Selector="c|TagsBox AutoCompleteBox">
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="Padding" Value="3,0 " />
        <Setter Property="Margin" Value="0,7,0,0" />
    </Style>

    <Style Selector="c|TagsBox AutoCompleteBox /template/ TextBox">
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style Selector="c|TagsBox AutoCompleteBox /template/ TextBox /template/ Border#PART_BorderElement">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <Style Selector="c|TagsBox AutoCompleteBox /template/ TextBox">
        <Setter Property="IsReadOnly" Value="{Binding !IsInputEnabled}" />
        <Setter Property="ContextMenu">
          <ContextMenu>
            <MenuItem Header="Paste" Command="{Binding $parent[TextBox].Paste}" IsEnabled="{Binding $parent[TextBox].CanPaste}" InputGesture="{x:Static TextBox.PasteGesture}"/>
          </ContextMenu>
        </Setter>
    </Style>
</Styles>