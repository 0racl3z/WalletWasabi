<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:behaviors="using:WalletWasabi.Fluent.Behaviors"
             xmlns:c="using:WalletWasabi.Fluent.Controls"
             xmlns:vm="using:WalletWasabi.Fluent.ViewModels.Wallets.Send"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:SendViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.Wallets.Send.SendView">
    <c:ContentArea Title="Send" Caption=""
                   EnableCancel="True"
                   ScrollViewer.VerticalScrollBarVisibility="Disabled">

        <StackPanel Spacing="10">
            <StackPanel>
                <Label Content="_To:" Target="toTb" />
                <TextBox x:Name="toTb" MaxLength="250" Text="{Binding To}"
                         Watermark="(e.g. Bitcoin address or PayJoin URL)">
                    <TextBox.InnerRightContent>
                        <Button Classes="plain"
                                ToolTip.Tip="Paste">
                            <PathIcon Data="{StaticResource paste_regular}" Width="13" />
                        </Button>
                    </TextBox.InnerRightContent>
                    <i:Interaction.Behaviors>
                        <behaviors:FocusOnAttachedBehavior />
                    </i:Interaction.Behaviors>
                </TextBox>
            </StackPanel>

            <StackPanel>
                <Label Content="_Amount:" Target="amountTb" />
                <c:CurrencyEntryBox x:Name="amountTb" ConversionRate="32212.00" ConversionCurrencyCode="USD" />
            </StackPanel>

            <StackPanel>
                <Label Content="_Labels:" Target="LabelTagBox" DockPanel.Dock="Top" />
                <c:TagsBox x:Name="LabelTagBox"
                           ItemCountLimit="12"
                           RestrictInputToSuggestions="True" />
            </StackPanel>

            <StackPanel>
                <Label Content="_Priority:" Target="PrioritySlider" DockPanel.Dock="Top" />
                <Slider x:Name="PrioritySlider" Minimum="0" Maximum="100" Value="100" />
            </StackPanel>
        </StackPanel>
    </c:ContentArea>
</UserControl>