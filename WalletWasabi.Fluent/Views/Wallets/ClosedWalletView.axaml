<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wallets="clr-namespace:WalletWasabi.Fluent.ViewModels.Wallets"
             mc:Ignorable="d" d:DesignWidth="428" d:DesignHeight="371"
             x:Class="WalletWasabi.Fluent.Views.Wallets.ClosedWalletView"
             x:DataType="wallets:ClosedWalletViewModel">
  <DockPanel LastChildFill="True" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="500">
    <TextBlock Text="{Binding EstimationText}" Opacity="0.6" DockPanel.Dock="Bottom" Margin="0 10 0 0"/>
    <ProgressBar Value="{Binding Percent}" IsIndeterminate="{Binding !Percent}" DockPanel.Dock="Bottom"/>
    <TextBlock Text="This process may take a long time depending on the size of yout wallet. Grab a coffee or watch a movie." TextAlignment="Center" TextWrapping="Wrap" Opacity="0.6" DockPanel.Dock="Bottom" Margin="0 10 0 30"/>
    <TextBlock Text="Wasabi is busy crunching data..." TextAlignment="Center" FontSize="22" DockPanel.Dock="Bottom" Margin="0 30 0 0"/>
    <Viewbox MaxHeight="200" DockPanel.Dock="Top">
      <Image Height="100" Source="/Assets/Loading/loading.png" />
    </Viewbox>
  </DockPanel>
</UserControl>
