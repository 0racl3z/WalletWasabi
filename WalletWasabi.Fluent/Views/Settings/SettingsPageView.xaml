<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:WalletWasabi.Fluent.Views.Settings"
             xmlns:c="using:WalletWasabi.Fluent.Controls"
             xmlns:vm="using:WalletWasabi.Fluent.ViewModels"
             xmlns:settings="clr-namespace:WalletWasabi.Fluent.ViewModels.Settings"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="settings:SettingsPageViewModel"
             x:Class="WalletWasabi.Fluent.Views.Settings.SettingsPageView">
  <UserControl.Styles>
    <Style Selector="TabItem">
      <Setter Property="FontSize" Value="12" />
      <Setter Property="MinHeight" Value="28" />
      <Setter Property="Padding" Value="0 0 24 24" />
    </Style>
    <Style Selector="TabControl">
      <Setter Property="Padding" Value="0" />
    </Style>
  </UserControl.Styles>
  <c:ContentArea Title="Settings" Caption="Manage appearance, privacy and other settings">
    <TabControl>
      <TabItem Header="General">
        <v:GeneralSettingsView />
      </TabItem>

      <TabItem Header="Privacy">
        <StackPanel Orientation="Vertical" Spacing="5">
          <Grid Margin="0 10" ColumnDefinitions="30, *">
            <DrawingPresenter Height="24" Width="24" Grid.Column="0" Margin="0 0 10 10" VerticalAlignment="Center" HorizontalAlignment="Center" Drawing="{DynamicResource PrivacySome}" />
            <TextBox Text="{Binding SomePrivacyLevel}" Grid.Column="1" />
          </Grid>
          <Grid Margin="0 10" ColumnDefinitions="30, *">
            <DrawingPresenter Height="24" Width="24" Grid.Column="0" Margin="0 0 10 10" VerticalAlignment="Center" HorizontalAlignment="Center" Drawing="{DynamicResource PrivacyFine}" />
            <TextBox Text="{Binding FinePrivacyLevel}" Grid.Column="1" />
          </Grid>
          <Grid Margin="0 10" ColumnDefinitions="30, *">
            <DrawingPresenter Height="24" Width="24" Grid.Column="0" Margin="0 0 10 10" VerticalAlignment="Center" HorizontalAlignment="Center" Drawing="{DynamicResource PrivacyStrong}" />
            <TextBox Text="{Binding StrongPrivacyLevel}" Grid.Column="1" />
          </Grid>
        </StackPanel>
      </TabItem>

      <TabItem Header="Network">
        <StackPanel Orientation="Vertical" Spacing="5">
          <StackPanel Margin="0 10" Orientation="Horizontal" Spacing="5">
            <ToggleSwitch IsChecked="{Binding UseTor}" Margin="0 0 10 0" />
            <TextBlock VerticalAlignment="Center" Text= "Tor can be turned off for debugging." />
          </StackPanel>
          <StackPanel Margin="0 10" Spacing="5" IsVisible="{Binding UseTor}">
            <TextBlock Text="Tor SOCKS5 Endpoint" />
            <TextBox Text="{Binding TorSocks5EndPoint}" />
          </StackPanel>
          <StackPanel Margin="0 10" Orientation="Horizontal" Spacing="5" IsVisible="{Binding UseTor}">
            <ToggleSwitch IsChecked="{Binding TerminateTorOnExit}" Margin="0 0 10 0" />
            <TextBlock VerticalAlignment="Center" Text= "Terminate Tor process on exit." />
          </StackPanel>
        </StackPanel>
      </TabItem>

      <TabItem Header="Node">
        <StackPanel Orientation="Vertical" Spacing="5">
          <StackPanel Margin="0 10" Spacing="5">
            <TextBlock Text="Network" />
            <ComboBox Items="{Binding Networks}" SelectedItem="{Binding Network}">
              <!--<ComboBox.ItemTemplate>
                      <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource NetworkStringConverter}}" />
                      </DataTemplate>
                    </ComboBox.ItemTemplate>-->
            </ComboBox>
          </StackPanel>
          <Panel>
            <StackPanel Orientation="Vertical" Spacing="5">
              <TextBlock Classes="warningMessage" Text= "Work in progress..." />
              <TextBlock Text="Use your own Bitcoin Core or Wasabi's built-in Bitcoin Knots." />
              <TextBlock Text="Expect high CPU, network usage and 300+ GB disk space requirement." />
              <StackPanel Margin="0 10" Orientation="Horizontal" Spacing="5">
                <ToggleSwitch IsChecked="{Binding StartLocalBitcoinCoreOnStartup}" Margin="0 0 10 0" />
                <TextBlock VerticalAlignment="Center" Text= "Run Bitcoin Knots at Wasabi's startup." />
              </StackPanel>
              <StackPanel Margin="0 10" Spacing="5" IsVisible="{Binding StartLocalBitcoinCoreOnStartup}">
                <TextBlock Text="Bitcoin Core or Bitcoin Knots Data Folder" />
                <TextBox Text="{Binding LocalBitcoinCoreDataDir}" />
              </StackPanel>
              <StackPanel Margin="0 10" Orientation="Horizontal" Spacing="5" IsVisible="{Binding StartLocalBitcoinCoreOnStartup}">
                <ToggleSwitch IsChecked="{Binding StopLocalBitcoinCoreOnShutdown}" Margin="0 0 10 0" />
                <TextBlock VerticalAlignment="Center" Text= "Stop Bitcoin Knots when Wasabi is shut down." />
              </StackPanel>
            </StackPanel>
          </Panel>
          <Panel IsVisible="{Binding !StartLocalBitcoinCoreOnStartup}">
            <StackPanel Orientation="Vertical" Spacing="5">
              <TextBlock Text="Set Wasabi to download blocks from a full node you control." />
              <StackPanel Margin="0 10" Spacing="5">
                <TextBlock Text="Bitcoin P2P Endpoint" />
                <TextBox Text="{Binding BitcoinP2pEndPoint}" />
              </StackPanel>
            </StackPanel>
          </Panel>
        </StackPanel>
      </TabItem>
    </TabControl>
  </c:ContentArea>
</UserControl>