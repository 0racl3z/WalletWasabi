<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WalletWasabi.Fluent.ViewModels.TagsBox"
             mc:Ignorable="d"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:behaviors="clr-namespace:WalletWasabi.Fluent.Behaviors;assembly=WalletWasabi.Fluent"
             x:Class="WalletWasabi.Fluent.Views.TagsBox.TagInputView">
    <AutoCompleteBox x:DataType="vm:TagInputViewModel" IsTextCompletionEnabled="True" Items="{CompiledBinding Suggestions}">
        <i:Interaction.Behaviors>
            <behaviors:TagsBoxAutoCompleteBoxBehavior
                RestrictInputToSuggestions="{CompiledBinding RestrictInputToSuggestions}"
                Suggestions="{CompiledBinding Suggestions}"
                GrabFocusAction="{CompiledBinding GrabFocusAction, Mode=OneWayToSource}"
                CommitTextAction="{CompiledBinding CommitTextAction}"
                BackspaceAndEmptyTextAction="{CompiledBinding BackspaceAndEmptyTextAction}" />
        </i:Interaction.Behaviors>
    </AutoCompleteBox>
</UserControl>