<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WalletWasabi.Fluent.ViewModels.Login.PasswordFinder"
             xmlns:c="using:WalletWasabi.Fluent.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:SearchPasswordViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.Login.PasswordFinder.SearchPasswordView">
  <c:ContentArea Title="{Binding Title}"
                 Caption="We can find your password anytime during the search"
                 EnableNext="False"
                 EnableCancel="True"
                 EnableBack="False">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
      <Panel HorizontalAlignment="Center">
        <c:ProgressRing IsIndeterminate="True"  Height="100" Width="100" />
        <TextBlock Text="{Binding Percentage}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
      </Panel>
      <TextBlock Text="{Binding RemainingText}" Margin="0 20 0 0" HorizontalAlignment="Center"/>
    </StackPanel>
  </c:ContentArea>
</UserControl>
