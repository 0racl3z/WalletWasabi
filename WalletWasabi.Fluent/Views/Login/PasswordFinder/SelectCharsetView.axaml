<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WalletWasabi.Fluent.ViewModels.Login.PasswordFinder"
             xmlns:c="using:WalletWasabi.Fluent.Controls"
             xmlns:conv="clr-namespace:WalletWasabi.Fluent.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:SelectCharsetViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.Login.PasswordFinder.SelectCharsetView">
  <c:ContentArea Title="{Binding Title}"
                 Caption="Please select the charset"
                 EnableNext="False"
                 EnableCancel="True"
                 EnableBack="True">

    <ListBox Items="{Binding Charsets}"
             SelectedItem="{Binding SelectedCharset}"
             Background="Transparent">
      <ListBox.ItemsPanel>
        <ItemsPanelTemplate>
          <WrapPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>
      </ListBox.ItemsPanel>
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Panel Width="150" Height="150"
                 Margin="10">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="45" Text="{Binding Converter={x:Static conv:EnumToStringConverter.ToUpperCase}}"/>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="{Binding Converter={x:Static conv:EnumToStringConverter.ToFriendlyName}}"/>
          </Panel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

  </c:ContentArea>
</UserControl>
